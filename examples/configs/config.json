{
  "environments": {
    "global": {
      "description": "Default configuration for all environments",
      "tablespaces": {
        "data": {
          "primary": "USERS",
          "lob": ["GD_LOB_01", "GD_LOB_02", "GD_LOB_03", "GD_LOB_04"]
        }
      },
      "subpartition_defaults": {
        "min_count": 2,
        "max_count": 16,
        "size_based_recommendations": {
          "small": {"max_gb": 1, "count": 2},
          "medium": {"max_gb": 10, "count": 4},
          "large": {"max_gb": 50, "count": 8},
          "xlarge": {"max_gb": 100, "count": 12},
          "xxlarge": {"max_gb": 999999, "count": 16}
        }
      },
      "parallel_defaults": {
        "min_degree": 1,
        "max_degree": 8,
        "default_degree": 4
      }
    },
    "development": {
      "description": "Development environment configuration",
      "tablespaces": {
        "data": {
          "primary": "DEV_DATA",
          "lob": ["DEV_LOB_01", "DEV_LOB_02"]
        }
      },
      "subpartition_defaults": {
        "min_count": 2,
        "max_count": 8,
        "size_based_recommendations": {
          "small": {"max_gb": 1, "count": 2},
          "medium": {"max_gb": 5, "count": 4},
          "large": {"max_gb": 999999, "count": 8}
        }
      },
      "parallel_defaults": {
        "min_degree": 1,
        "max_degree": 4,
        "default_degree": 2
      }
    },
    "production": {
      "description": "Production environment configuration",
      "tablespaces": {
        "data": {
          "primary": "PROD_DATA_01",
          "lob": ["PROD_LOB_01", "PROD_LOB_02", "PROD_LOB_03", "PROD_LOB_04"]
        }
      },
      "subpartition_defaults": {
        "min_count": 4,
        "max_count": 32,
        "size_based_recommendations": {
          "small": {"max_gb": 5, "count": 4},
          "medium": {"max_gb": 25, "count": 8},
          "large": {"max_gb": 100, "count": 16},
          "xlarge": {"max_gb": 500, "count": 24},
          "xxlarge": {"max_gb": 999999, "count": 32}
        }
      },
      "parallel_defaults": {
        "min_degree": 2,
        "max_degree": 16,
        "default_degree": 8
      }
    }
  },
  "additional_configs": {
    "staging": {
      "description": "Staging environment configuration",
      "tablespaces": {
        "data": {
          "primary": "STAGE_DATA",
          "lob": ["STAGE_LOB_01", "STAGE_LOB_02", "STAGE_LOB_03"]
        }
      },
      "subpartition_defaults": {
        "min_count": 2,
        "max_count": 16,
        "size_based_recommendations": {
          "small": {"max_gb": 2, "count": 2},
          "medium": {"max_gb": 15, "count": 6},
          "large": {"max_gb": 75, "count": 12},
          "xlarge": {"max_gb": 250, "count": 16}
        }
      },
      "parallel_defaults": {
        "min_degree": 1,
        "max_degree": 8,
        "default_degree": 4
      }
    },
    "test": {
      "description": "Test environment configuration",
      "tablespaces": {
        "data": {
          "primary": "TEST_DATA",
          "lob": ["TEST_LOB_01"]
        }
      },
      "subpartition_defaults": {
        "min_count": 1,
        "max_count": 4,
        "size_based_recommendations": {
          "small": {"max_gb": 1, "count": 1},
          "medium": {"max_gb": 5, "count": 2},
          "large": {"max_gb": 999999, "count": 4}
        }
      },
      "parallel_defaults": {
        "min_degree": 1,
        "max_degree": 2,
        "default_degree": 1
      }
    }
  },
  "migration_settings": {
    "default_environment": "development",
    "backup_before_migration": true,
    "validate_before_execution": true,
    "generate_rollback_scripts": true,
    "chunk_size_mb": 100,
    "max_parallel_jobs": 4
  },
  "database_settings": {
    "connection_timeout": 30,
    "query_timeout": 300,
    "batch_size": 1000,
    "retry_attempts": 3,
    "retry_delay_seconds": 5
  }
}
