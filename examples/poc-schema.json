{
  "metadata": {
    "poc_name": "ORDERS_MIGRATION_POC",
    "description": "POC for testing ORDERS table migration to interval-hash partitioning",
    "environment": "development",
    "created_date": "2025-01-15 10:00:00",
    "version": "1.0"
  },
  "source_schema": {
    "schema_name": "PROD_SCHEMA",
    "description": "Production schema for schema discovery",
    "connection_info": {
      "host": "prod-db.company.com",
      "port": 1521,
      "service": "PROD",
      "username": "readonly_user",
      "password": "readonly_password"
    }
  },
  "target_schema": {
    "schema_name": "POC_SCHEMA",
    "description": "Target schema for POC testing",
    "connection_info": {
      "host": "test-db.company.com",
      "port": 1521,
      "service": "TEST",
      "username": "poc_user",
      "password": "poc_password"
    }
  },
  "table_selection": {
    "include_patterns": [
      "ORDERS%",
      "ORDER_ITEMS%",
      "CUSTOMERS%"
    ],
    "exclude_patterns": [
      "TEMP_%",
      "BACKUP_%",
      "OLD_%"
    ],
    "specific_tables": [
      "ORDERS",
      "ORDER_ITEMS",
      "CUSTOMERS"
    ]
  },
  "cleanup_options": {
    "cleanup_existing": true,
    "drop_existing_tables": true,
    "drop_existing_indexes": true,
    "drop_existing_constraints": true,
    "preserve_grants": false
  },
  "ddl_options": {
    "include_constraints": true,
    "include_indexes": true,
    "include_grants": true,
    "include_triggers": false,
    "include_sequences": false,
    "include_views": false
  },
  "sampling_options": {
    "enabled": false,
    "sample_percentage": 10,
    "sample_strategy": "random",
    "preserve_referential_integrity": true,
    "max_rows_per_table": 100000,
    "min_rows_per_table": 100
  },
  "migration_options": {
    "enable_migration_testing": true,
    "migration_environment": "production",
    "target_partitioning": {
      "partition_type": "INTERVAL",
      "interval_type": "DAY",
      "subpartition_type": "HASH",
      "subpartition_count": 16
    }
  },
  "validation_options": {
    "enable_data_validation": true,
    "enable_performance_validation": true,
    "enable_constraint_validation": true,
    "validation_tolerance": 0.01
  },
  "execution_options": {
    "parallel_execution": true,
    "max_parallel_degree": 4,
    "execution_timeout_minutes": 60,
    "enable_logging": true,
    "log_level": "INFO"
  }
}
