{
  "metadata": {
    "poc_name": "ORDERS_MIGRATION_POC",
    "description": "Data sampling configuration for POC testing",
    "environment": "development",
    "created_date": "2025-01-15 10:00:00",
    "version": "1.0"
  },
  "data_source": {
    "schema_name": "QA_SCHEMA",
    "description": "QA schema for data sampling",
    "connection_info": {
      "host": "qa-db.company.com",
      "port": 1521,
      "service": "QA",
      "username": "qa_readonly_user",
      "password": "qa_readonly_password"
    }
  },
  "sampling_configuration": {
    "global_sample_percentage": 10,
    "sample_strategy": "random",
    "preserve_referential_integrity": true,
    "max_rows_per_table": 100000,
    "min_rows_per_table": 100,
    "exclude_lob_columns": false,
    "exclude_empty_tables": true
  },
  "table_specific_sampling": {
    "ORDERS": {
      "sample_percentage": 5,
      "sample_strategy": "recent",
      "date_column": "ORDER_DATE",
      "days_back": 30,
      "max_rows": 50000
    },
    "ORDER_ITEMS": {
      "sample_percentage": 10,
      "sample_strategy": "related",
      "parent_table": "ORDERS",
      "max_rows": 100000
    },
    "CUSTOMERS": {
      "sample_percentage": 20,
      "sample_strategy": "random",
      "max_rows": 10000
    }
  },
  "referential_integrity": {
    "enabled": true,
    "parent_child_relationships": [
      {
        "parent_table": "CUSTOMERS",
        "parent_key": "CUSTOMER_ID",
        "child_table": "ORDERS",
        "child_key": "CUSTOMER_ID"
      },
      {
        "parent_table": "ORDERS",
        "parent_key": "ORDER_ID",
        "child_table": "ORDER_ITEMS",
        "child_key": "ORDER_ID"
      }
    ],
    "sampling_order": [
      "CUSTOMERS",
      "ORDERS", 
      "ORDER_ITEMS"
    ]
  },
  "data_validation": {
    "enable_row_count_validation": true,
    "enable_data_integrity_validation": true,
    "enable_referential_integrity_validation": true,
    "validation_queries": [
      "SELECT COUNT(*) FROM {table_name}",
      "SELECT MIN({date_column}), MAX({date_column}) FROM {table_name}",
      "SELECT COUNT(DISTINCT {key_column}) FROM {table_name}"
    ]
  },
  "export_options": {
    "export_format": "sql",
    "include_drop_statements": true,
    "include_create_statements": true,
    "include_insert_statements": true,
    "batch_size": 1000,
    "enable_compression": false
  },
  "performance_options": {
    "parallel_export": true,
    "max_parallel_degree": 4,
    "export_timeout_minutes": 30,
    "enable_statistics": true,
    "enable_timing": true
  }
}
