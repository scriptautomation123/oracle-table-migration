{
  "name": "Oracle Table Migration - Performance Testing Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",

  // Optimized for large Codespace machines (32-core recommended for performance testing)
  // Will work on any machine size - select 32-core manually during creation for best performance

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "Oracle.oracledevtools",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-oracle",
        "wholroyd.jinja",
        "redhat.vscode-yaml",
        "humao.rest-client",
        "rangav.vscode-thunder-client",
        "ms-vscode.makefile-tools",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.rulers": [88, 120],
        "files.associations": {
          "*.sql.j2": "jinja-sql",
          "*.sql": "sql"
        },
        // Performance monitoring
        "files.watcherExclude": {
          "**/output/**": true,
          "**/examples/generated/**": true,
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true,
          "**/__pycache__/**": true
        },
        // Oracle SQL formatting
        "sqltools.useNodeRuntime": true,
        "sqltools.format": {
          "language": "sql",
          "reservedWordCase": "upper"
        }
      }
    },
    "codespaces": {
      "openFiles": ["README.md", "USER_GUIDE.md", ".devcontainer/README.md"]
    }
  },

  "postCreateCommand": "bash .devcontainer/setup.sh",

  "forwardPorts": [1521, 5500],
  "portsAttributes": {
    "1521": {
      "label": "Oracle Database",
      "onAutoForward": "notify"
    },
    "5500": {
      "label": "Oracle EM Express",
      "onAutoForward": "silent"
    }
  },

  "remoteUser": "vscode"
}
