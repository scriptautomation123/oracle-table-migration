CREATE OR REPLACE TRIGGER employee_view_update_trg
    INSTEAD OF UPDATE ON employee_view
    FOR EACH ROW
BEGIN
    -- Simple, clean, efficient
    UPDATE employees
    SET 
        first_name = :NEW.first_name,
        last_name = :NEW.last_name,
        salary = :NEW.salary,
        department_id = :NEW.department_id,
        last_modified = SYSTIMESTAMP,  -- audit column
        modified_by = USER              -- audit column
    WHERE emp_id = :OLD.emp_id;
    
    -- That's it! Let Oracle handle the rest
END employee_view_update_trg;
/
